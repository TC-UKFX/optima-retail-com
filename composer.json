{
    "name": "optima-retail/wordpress-ecommerce",
    "description": "WordPress E-commerce store for Optima Retail with Hello Elementor theme",
    "type": "project",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Optima Retail Team"
        }
    ],
    "require": {
        "php": ">=8.0",
        "composer/installers": "^1.12"
    },
    "require-dev": {
        "wp-cli/wp-cli": "^2.7"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "extra": {
        "installer-paths": {
            "wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "wp-content/themes/{$name}/": ["type:wordpress-theme"]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "wp core download --skip-content"
        ]
    }
}